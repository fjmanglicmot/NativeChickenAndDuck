<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/add_generation"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/generation_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_margin="10dp"
        android:hint="Generation"
        android:inputType="number"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/add_lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/generation_no"
        android:layout_margin="10dp"
        android:hint="Add Line 1"
        android:inputType="text"
        android:textSize="15sp" />
    <EditText
        android:id="@+id/add_lines2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_lines"
        android:layout_margin="10dp"
        android:hint="Add Line 2"
        android:inputType="text"
        android:textSize="15sp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/add_lines3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_lines2"
        android:layout_margin="10dp"
        android:hint="Add Line 3"
        android:inputType="text"
        android:textSize="15sp"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/add_lines4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_lines3"
        android:layout_margin="10dp"
        android:hint="Add Line 4"
        android:inputType="text"
        android:textSize="15sp"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/add_lines5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_lines4"
        android:layout_margin="10dp"
        android:hint="Add Line 5"
        android:inputType="text"
        android:textSize="15sp"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_lines5"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/add_line_field_button"
            android:layout_width="177dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonstylepaprika"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:text="add line field"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/action_ok"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/buttonstylepaprika"
            android:text="Submit"
            android:textColor="@color/white"
            android:layout_gravity="end"/>

    </LinearLayout>

</RelativeLayout>