<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreedersDirectory.HatcheryRecords"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/navigation_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/pen_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/replacement_pheno_inv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hatchery Record | WVSUfc1551309390"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />



        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/brooder_inventory_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="15dp"
                >

                <TableLayout
                    android:id="@+id/breeder_gen_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    >


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >


                        <TextView
                            android:id="@+id/brooder_inventory_code"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="Date Set"
                            android:textStyle="bold"
                            />

                      <!--  <TextView
                            android:id="@+id/brooder_inventory_family"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="Quantity" />

                        <TextView
                            android:id="@+id/brooder_inventory_line"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="Age in Weeks" />

                        <TextView
                            android:id="@+id/brooder_inventory_gen"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="No. of Fertile" />-->

                     <TextView
                            android:id="@+id/brooder_inventory_batch_date"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="Date Hatched" />

                        <!--      <TextView

                                                  android:layout_width="50dp"
                                                  android:layout_height="wrap_content"
                                                  android:layout_margin="10dp"
                                                  android:gravity="center"
                                                  android:textStyle="bold"
                                                  android:textSize="12sp"
                                                  android:text="No. of Hatched" />-->


                        <TextView

                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="View More" />

                        <TextView

                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="Delete" />


                    </TableRow>




                </TableLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewHatcheryRecords"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    >

                </android.support.v7.widget.RecyclerView>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">




                    <ImageButton

                        android:id="@+id/open_dialog"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="28dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/floatingbutton"
                        android:src="@drawable/ic_add_black_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </android.support.constraint.ConstraintLayout>



            </android.support.v7.widget.CardView>
        </HorizontalScrollView>








    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        >
        <ExpandableListView
            android:layout_marginTop="190dp"
            android:id="@+id/exp_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indicatorLeft="?android:attr/expandableListPreferredChildIndicatorLeft"
            android:groupIndicator="@null"
            />
    </android.support.design.widget.NavigationView>



</LinearLayout>